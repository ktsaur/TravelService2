{
	"info": {
		"_postman_id": "1234-5678-abcd-efgh",
		"name": "Travel Service API Tests",
		"description": "Тесты для Travel Service REST API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "tripId",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "1. Создание путешествия",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Статус 201 Created\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"var jsonData = pm.response.json();",
							"pm.collectionVariables.set(\"tripId\", jsonData.id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Путешествие в Париж\",\n    \"description\": \"Романтическое путешествие в столицу Франции\",\n    \"country\": \"Франция\",\n    \"city\": \"Париж\",\n    \"startDate\": \"2024-06-01\",\n    \"endDate\": \"2024-06-07\",\n    \"price\": 1500.00,\n    \"imageUrl\": \"https://example.com/paris.jpg\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/trips",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"trips"
					]
				}
			}
		},
		{
			"name": "2. Получение всех путешествий",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Статус 200 OK\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Список путешествий не пустой\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.length).to.be.above(0);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/v1/trips",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"trips"
					]
				}
			}
		},
		{
			"name": "3. Получение путешествия по ID",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Статус 200 OK\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Проверка данных путешествия\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.id).to.eql(pm.collectionVariables.get(\"tripId\"));",
							"    pm.expect(jsonData.name).to.eql(\"Путешествие в Париж\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/v1/trips/{{tripId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"trips",
						"{{tripId}}"
					]
				}
			}
		},
		{
			"name": "4. Обновление путешествия",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Статус 200 OK\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Проверка обновленных данных\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.price).to.eql(1600.00);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Путешествие в Париж\",\n    \"description\": \"Романтическое путешествие в столицу Франции\",\n    \"country\": \"Франция\",\n    \"city\": \"Париж\",\n    \"startDate\": \"2024-06-01\",\n    \"endDate\": \"2024-06-07\",\n    \"price\": 1600.00,\n    \"imageUrl\": \"https://example.com/paris.jpg\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/trips/{{tripId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"trips",
						"{{tripId}}"
					]
				}
			}
		},
		{
			"name": "5. Поиск путешествий",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Статус 200 OK\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Проверка результатов поиска\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.length).to.be.above(0);",
							"    pm.expect(jsonData[0].country).to.eql(\"Франция\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/v1/trips/search?country=Франция&city=Париж",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"trips",
						"search"
					],
					"query": [
						{
							"key": "country",
							"value": "Франция"
						},
						{
							"key": "city",
							"value": "Париж"
						}
					]
				}
			}
		},
		{
			"name": "6. Удаление путешествия",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Статус 204 No Content\", function () {",
							"    pm.response.to.have.status(204);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/v1/trips/{{tripId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"trips",
						"{{tripId}}"
					]
				}
			}
		}
	]
} 